    <style>
        
/* invoice screen css */

.invoice-container {  max-width: 800px; margin: auto; border-top: 10px solid var(--pg_color);  border-bottom: 10px solid var(--pg_color); padding: 50px 20px; font-size: 14px; color: var(--black); min-width: 800px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25);

  --invoiceSecGap: 34px;
}

.invoiceHeader{ width: 100%; display: flex; justify-content: space-between; align-items: flex-start;}

.invoiceHeader_right{ margin-left: auto; padding-left: 30px; display: flex; align-items: center; flex-direction: column; gap: 20px; }

.invoiceHeader_right figure{ display: block; max-width: 130px;}
.invoiceHeader_right figure img{ display: block; max-width: none; width: 100%; height: auto;}

.invoiceHeader_right span{ display: block; padding: 0px 10px 6px 10px; font-size: 1.2em; border-bottom: 1px solid var(--border_color); color: var(--black);}

.invoiceHeader_details{ width: auto;}

.invoiceHeader_details h3{ font-size: 1.6em; font-weight: 600; line-height: 1.2em; padding-bottom: var(--invoiceSecGap);}
.invoiceHeader_details h3 span{ display: block;}

.invoiceHeader_details p{  font-size: 1.2em; line-height: 1.4em; }

.invoiceHeader_details p small{ display: block; text-transform: uppercase; font-size: 1em;  border-bottom: 1px solid var(--border_color); color: var(--black); margin-bottom: 6px;}

.invoiceDetails_pad{  padding-bottom: var(--invoiceSecGap); }
 
.invoiceTable {  width: 100%;  border-collapse: collapse; margin-bottom: var(--invoiceSecGap); }
.invoiceTable thead{ background-color: var(--pg_color); color: var(--white);}

.invoiceTable th, .invoiceTable td { border: 1px solid var(--border_color);  padding: 8px;  text-align: left;  line-height: 1.4em; height: 30px; }
.invoiceTable th{ text-transform: uppercase; letter-spacing: 1px;}

.invoiceTable tbody tr:nth-last-child(even){ background-color: var(--grey);}

.invoiceTotal{ width: 100%; text-align: right;}
.invoiceTotal th, .invoiceTotal td{ padding:2px 4px;}
.invoiceTotal span{ display: block;  font-size: 1em;  padding:2px 4px; border-bottom: 1px solid var(--border_color); color: var(--black); }
 
.invoiceTotal strong{ display: block; font-weight: 600;  font-size: 1.2em; border-bottom: 1px solid var(--border_color); color: var(--black);  padding:4px 4px;  }

.invoiceTotal b{  font-weight: 600;  font-size: 1.2em;  }

.invoiceFooter{ width: 100%; display: flex; justify-content: space-between; align-items: flex-start; }

.invoiceFooter_stamp{ padding-right: 30px; margin-right: auto; max-width: 250px; }

.invoiceFooter_stamp img{ display: block; width: 100%; height: auto;}

.invoiceTotal tbody tr:last-child td{ padding-top: 10px;}
@media print {
  .invoice-container{ min-height: 100vh;}
}
    </style>
</head>

