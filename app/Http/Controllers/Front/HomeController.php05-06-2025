    public function print_invoice($id){


        $ride = Ride::where('id',$id)->first();

         if (empty($ride)) {
            
            return back()->withErrors(['trackBooking_ref' => 'No Record Found']);
        }

         $user = User::where('email',$ride->email)->first();

         $data = [
            'image_path' => asset('front/images/logo.svg'),
            'ride' => $ride,
            'user' => $user
        ];

        $pdf = Pdf::loadView('front.invoice.invoice', $data);

        $newFileName = 'invoice_' . $ride->booking_code . '.pdf';
        // return $pdf->download( $newFileName);

        //  return response()->streamDownload(function() use ($pdf) {
        //     echo $pdf->output();
        // }, $newFileName);

         return response()->stream(function () use ($pdf) {
                echo $pdf->output();
                }, 200, [
                    'Content-Type' => 'application/pdf',
                    'Content-Disposition' => 'attachment; filename="invoice_'.$ride->booking_code.'.pdf"',
                ]);

        // return view('front.invoice.invoice',compact('ride','user'));
    }

    //Get Copoun Code 

    public function get_copon_code(Request $request){

        $code = $request->code;
        $ride_type_id = session('step_one_data')["ride_type_id"];

        if (empty($code)) {
            
            return response()->json(['sucess' => false,'message' => 'Please Provide a Discount Voucher Code']);
        }

        $coupon = Coupons::where('code', $code)->where(['active' =>  true])->where('valid_until', '>=', Carbon::today())->with('ride_type')->first();

        $response = null;
        if (empty($coupon)) {

            return response()->json(['success' => false,'message' => 'This Copoun Code is not Valid!']);
        }

        if ($coupon->ride_type_id != $ride_type_id){

            $ride_type = !empty($coupon->ride_type->type) ? $coupon->ride_type->type : '';
             return response()->json(['success' => false,'message' => 'Invalid Copoun Code!, This Copoun Code is valid for only '.$ride_type.""]);
        }

        $user_info = User::where('email',session('step_two_data')["email"])->first();

        if (!empty($user_info)) {

            $copouns_used = DB::table('coupon_users')->where(['coupons_id' => $coupon->id,'user_id' => $user_info->id])->get();

            if (count($copouns_used) >= 3) {
                
                return response()->json(['success' => false,'message' => 'Sorry same coupon code can not be used more then 3 times use other account to use coupon']);
            }
        }


        return response()->json(['success' => true,'copoun' =>$coupon]);
    }


    //store become partner form
    public function store_become_partner(Request $request){

        $request->validate(
            [
                'first_name' => 'required',
                'last_name' => 'required',
                'email' => 'required',
                'phone' => 'required',
                'address' => 'nullable',
                'emirates' => 'required',
                'are_you' => 'required',
                'register_with' => 'required',
                'message' => 'nullable',
                'files_upload.*' => 'required|file|mimes:jpeg,png,gif,jpg,pdf,doc,docx,txt,rtf,ppt,pptx,xls,xlsx|max:10240',
            ]
            );
            

           $partner =  BecomePartner::create(
                [
                'first_name' => $request->first_name,
                'last_name' => $request->last_name,
                'email' => $request->email,
                'phone' => $request->phone,
                'address' => $request->address,
                'emirates' => $request->emirates,
                'are_you' => $request->are_you,
                'are_you_register' => $request->register_with,
                'message' => $request->message,
                ]
                );

                //Uploading Files

                $attachements = [];

                if (!empty($request->files_upload) && count($request->files_upload) > 0) {
                    
                    foreach ($request->files_upload as $key => $value) {
                        
                        // 
                        $file_path = rand().'.'.$value->getClientOriginalExtension();
                        $extension = $value->getClientOriginalExtension();
                        $value->move(public_path('upload/partners'),$file_path);

                        BecomePartnerFiles::create(
                            [
                                'partner_id' => $partner->id,
                                'file_extension' => $extension,
                                'file_path' => $file_path
                            ]
                            );

                        array_push( $attachements,public_path().'/upload/partners/'.$file_path);
                    }
                }

            $admins = User::where('role_id',1)->get();

           foreach ($admins as $admin) {
            
              $admin_message = '<p> Dear '.$admin->name."</p><p>Become a Partner form has been submitted with the following informations</p><p><strong>Name: ".$request->first_name." ".$request->last_name." <br> Email: ".$request->email."<br> Phone: ".$request->phone."<br>Address: ".$request->address."<br> Emirates: ".$request->emirates."<br> Are you ?: ".$request->are_you."<br>Register: ".$request->register_with."<br> Message: ".$request->message."<br>";

              Mail::to($admin->email)->send(new ContactUsMail('Become a Partner',$admin_message,$attachements));
           }

        //  return redirect()->back();

        return response()->json(['success' =>true,'message' =>"Your Message has been sent successfully"]);
    }

