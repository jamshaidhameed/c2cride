//Travel Agencies

public function travel_agencies_form_post(Request $request){
    $request->validate(
        [
            'first_name' => 'required',
            "last_name" => 'required',
            "email" => 'required',
            "phone" => 'required',
            "watsapp" => 'required',
            "business_name" => 'required',
            "company_website" => 'required',
            "position" => 'required',
            "country_of_registration" => 'required',
            "address" => 'required',
            "anticipated_booking" => 'required',
            "proposed_date" => 'required',
            "message" => 'nullable',
            'files_upload.*' => 'required|file|mimes:jpeg,png,gif,jpg,pdf,doc,docx,txt,rtf,ppt,pptx,xls,xlsx|max:10240',
        ]
        );

        $file_names = array();
        $attachements = [];
        

        if (!empty($request->files_upload) && count($request->files_upload) > 0) {
            
            foreach ($request->files_upload as $key => $value) {
                      
                $file_path = rand().'.'.$value->getClientOriginalExtension();
                $extension = $value->getClientOriginalExtension();
                $value->move(public_path('upload/custom-form'),$file_path);

                array_push($file_names,$file_path);

                array_push( $attachements,public_path().'/upload/custom-form/'.$file_path);
            }

        }

        TravelAgencies::create(
            [
                'type' => $request->type,
                'name' => $request->first_name." ".$request->last_name,
                'email' => $request->email,
                'phone' => $request->phone,
                'watsapp' => $request->watsapp,
                'business_name' => $request->business_name,
                'company_website' => $request->company_website,
                'position' => $request->position,
                'country_of_registration' => $request->country_of_registration,'address' => $request->address,
                'anticipated_booking' => $request->anticipated_booking,
                'proposed_date' => $request->proposed_date,
                'message' => $request->message,
                'files' => count($file_names) > 0 ? implode(",",$file_names) : ''
            ]
            );

            $admins = User::where('role_id',1)->get();

           foreach ($admins as $admin) {
            
            $admin_message = '<p> Dear '.$admin->name."</p><p>".$request->type." form has been submitted with the following informations</p><p><strong>Name: ".$request->first_name." ".$request->last_name." </strong><br> <strong>Email:</strong> ".$request->email."<br> <strong>Phone: </strong>".$request->phone."<br><strong>Watsapp: </strong>".$request->watsapp."<br><strong>Business Name:</strong> ".$request->business_name."<br><strong>Company Website:</strong> ".$request->company_website."<br><strong>Position/Designation: </strong>".$request->position."<br><strong>Country of Registration:</strong> ".$request->country_of_registration."<br><strong>Anticipated Booking Volume (Monthly):</strong> ".$request->anticipated_booking."<br><strong>Proposed Start Date for Collaboration:</strong> ".$request->proposed_date."<br><strong>Head Office Address: </strong>".$request->address." <br><strong>Specific requirements or operational expectations from C2C Ride:</strong><br> ".$request->message."<br></p>";

              Mail::to($admin->email)->send(new ContactUsMail($request->type,$admin_message,$attachements));
           }

            return response()->json(['success' =>true,'message' =>"Request is successfully generated"]);

}
    
} 
